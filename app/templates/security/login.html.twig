{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

    {% block css %}
        {{ parent() }}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}

{% block content %}
    <form method="post">
        {% if app.user %}
            <div class="">
                Ви ввійшли як {{ app.user.username }}, <a href="{{ path('app_logout') }}">Вийти</a>
            </div>
        {% endif %}

        <h1 class="">Login</h1>
        {% if error %}
            <div class="error-login alert alert-danger error-text"><p>невірний пароль або логін</p></div>
        {% endif %}

        <div class="login-form">
            <div>
                {#                <label for="inputEmail">Email</label>#}
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
            </div>
            <div>
                {#                <label for="inputPassword">Password</label>#}
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password"
                       required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <button class="" type="submit">
                Ввійти
            </button>
            <a href="{{ path('app_forgot_password_request') }}">забув пароль</a>
        </div>
        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
    </form>
{% endblock %}


