{% extends 'admin/default/default.html.twig' %}
{% block css %}
    {{ parent() }}
    {{ encore_entry_link_tags('promoteModal') }}
{% endblock %}
{% block js %}
    {{ parent() }}
    {{ encore_entry_script_tags('promoteModal') }}
{% endblock %}
{% block content %}
    <h1>Edit profile</h1>
    {{ form(form) }}
    {% if user.role == constant('App\\Entity\\User::ROLE_SCOUT') or user.role == constant('App\\Entity\\User::ROLE_WOLVES') %}
        <button id="call-modal-promote" data-target="{{ user.id }}">Promote</button>
        <div id="promote-modal" class="d-none">
            <promote></promote>
        </div>
    {% endif %}
{% endblock %}
