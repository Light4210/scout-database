{% extends 'admin/default/default.html.twig' %}

{% block content %}
    <h1>Profile</h1>
    {% for flashMessage in app.session.flashbag.get('fail') %}
        {{ flashMessage }}
    {% endfor %}
    <ul>
        {{ user.name }}
        {% if editable == true %}
        <li>
            <a href="{{ path('user.edit', {'id': app.request.get('id')}) }}">edit</a>
            <a href="{{ path('user.promote.' . user.type ) }}"></a>
        </li>
        {% endif %}
    </ul>
{% endblock %}